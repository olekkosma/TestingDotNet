@model IEnumerable<Players.Models.Statistic>
@using Players.Helpers;
@{
    ViewBag.Title = "Statistics";
}
<h2 class="text-center" id="statisticId">@ViewData["Title"]</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Match.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Player.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.goals)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.assists)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.minutes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Match.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Player.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.goals)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.assists)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.minutes)
        </td>
        <td>
@if (this.User.IsInRole("Administrator")) {
     @Html.ActionLink("Edit", "Edit", new { id = item.StatisticID })} |
            @Html.ActionLink("Details", "Details", new { id=item.StatisticID }) |
@if (this.User.IsInRole("Administrator")) {
            @Html.ActionLink("Delete", "Delete", new { id = item.StatisticID })}
        </td>
    </tr>
}

</table>
